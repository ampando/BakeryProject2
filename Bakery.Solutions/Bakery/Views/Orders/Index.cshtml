@using Bakery.Models;

<h1>Pierre's Bakery</h1>

@if (Model.Count == 0)
{
  <p>There are no Orders on the List.</p>
}
<ul>
  @foreach (Order order in Model)
  {
    <li><a href='/orders/@order.Id'>@order.Title</a></li>
    <li><a href='/orders/@order.Id'>@order.Description</a></li>
    <li><a href='/orders/@order.Id'>@order.Price</a></li>
    <li><a href='/orders/@order.Id'>@order.Date</a></li>
  }
</ul>

<a href="/orders/new">Add a new Order.</a>

<form action="/orders/delete" method="post">
<button type="submit" name="button">Clear All Orders</button>
</form>